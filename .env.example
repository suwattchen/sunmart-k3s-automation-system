# K3s Automation System Configuration

# ==================== Domain Configuration ====================
BASE_DOMAIN=sunmart.online
DIFY_DOMAIN=dify.sunmart.online
WORDPRESS_DOMAIN=wordpress.sunmart.online
ACTIVEPIECES_DOMAIN=activepieces.sunmart.online
PAYMENTER_DOMAIN=billing.sunmart.online

# ==================== Database Configuration ====================
# MySQL/MariaDB for WordPress and Paymenter
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=your_secure_wordpress_password

PAYMENTER_DB_NAME=paymenter
PAYMENTER_DB_USER=paymenter
PAYMENTER_DB_PASSWORD=your_secure_paymenter_password

# PostgreSQL for Dify and ActivePieces
POSTGRES_PASSWORD=your_secure_postgres_password
DIFY_DB_NAME=dify
DIFY_DB_USER=dify
DIFY_DB_PASSWORD=your_secure_dify_password

ACTIVEPIECES_DB_NAME=activepieces
ACTIVEPIECES_DB_USER=activepieces
ACTIVEPIECES_DB_PASSWORD=your_secure_activepieces_password

# ==================== Dify Configuration ====================
DIFY_SECRET_KEY=your_dify_secret_key_here
DIFY_API_KEY=your_dify_api_key_here
DIFY_ADMIN_EMAIL=admin@sunmart.online
DIFY_ADMIN_PASSWORD=your_secure_admin_password

# ==================== WordPress Configuration ====================
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=your_secure_wordpress_admin_password
WORDPRESS_ADMIN_EMAIL=admin@sunmart.online

# ==================== ActivePieces Configuration ====================
ACTIVEPIECES_SECRET=your_activepieces_secret_here
ACTIVEPIECES_JWT_SECRET=your_jwt_secret_here
ACTIVEPIECES_ENCRYPTION_KEY=your_encryption_key_here

# ==================== Paymenter Configuration ====================
PAYMENTER_APP_KEY=base64:your_laravel_app_key_here
PAYMENTER_APP_URL=https://billing.sunmart.online
PAYMENTER_ADMIN_EMAIL=admin@sunmart.online
PAYMENTER_ADMIN_PASSWORD=your_secure_paymenter_admin_password

# ==================== External API Keys ====================
# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# LINE OA
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_telegram_admin_chat_id_here

# Cloudflare API
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# ==================== Webhook Configuration ====================
# Paymenter -> ActivePieces Webhook
ACTIVEPIECES_WEBHOOK_URL=https://activepieces.sunmart.online/api/v1/webhooks/paymenter
WEBHOOK_SECRET=your_webhook_secret_here

# ==================== Storage Configuration ====================
# K3s StorageClass name
STORAGE_CLASS=local-path

# ==================== TLS/SSL Configuration ====================
# Set to "true" to enable Let's Encrypt auto-provisioning
TLS_ENABLED=true
CERT_MANAGER_EMAIL=admin@sunmart.online